<body class="bg-[#e0ac69]">
    <h1 class="text-center text-[5vw]">New Event Form</h1>
    <div class="flex justify-center">
        <div class="flex justify-center">
            <form action="/Adder" method="POST" class="bg-gray-300 h-auto w-[60vw] p-6 rounded-xl">
                <fieldset>
                <h4 class="text-center text-[1.25vw] mb-[2.5vh]">Fill Out Event Information Here.</h4>
                <div class="grid-cols-2 grid gap-[1vw]">
                    <div>
                        <label for="bride_name" class="block mb-2 text-[1.25vw] font-medium text-gray-900">Bride's Name:</label>
                        <input name="bride_name" type="text" class="w-full border-solid border-2 border-[#1e0e4b] rounded-md p-2" placeholder="Mia Lopez" required>
                    </div>
                    <div>
                        <label class="block mb-2 text-[1.25vw] font-medium text-gray-900">Groom's Name:</label>
                        <input name="groom_name" type="text" class="w-full border-solid border-2 border-[#1e0e4b] rounded-md p-2" placeholder="John Doe" required>
                    </div>
                    <div>
                        <label class="block mb-2 text-[1.25vw] font-medium text-gray-900">Wedding Date:</label>
                        <input name="wedding_date" type="text" class="w-full border-solid border-2 border-[#1e0e4b] rounded-md p-2" placeholder="06/15/2024" required>
                    </div>
                    <div>
                        <label class="block mb-2 text-[1.25vw] font-medium text-gray-900">Venue Name:</label>
                        <input name="venueName" type="text" class="w-full border-solid border-2 border-[#1e0e4b] rounded-md p-2" placeholder="Rosewood Gardens" required>
                    </div>
                    <div>
                        <label class="block mb-2 text-[1.25vw] font-medium text-gray-900">Venue Address:</label>
                        <input name="venueAddress" type="text" class="w-full border-solid border-2 border-[#1e0e4b] rounded-md p-2" placeholder="123 Blossom Street, Springfield, IL" required>
                    </div>
                    <div>
                        <label class="block mb-2 text-[1.25vw] font-medium text-gray-900">Guest Capacity:</label>
                        <input name="guest_capacity" type="text" class="w-full border-solid border-2 border-[#1e0e4b] rounded-md p-2" placeholder="150" required>
                    </div>
                    <div>
                        <label class="block mb-2 text-[1.25vw] font-medium text-gray-900">Ceremony Event's Name:</label>
                        <input name="eventsName1" type="text" class="w-full border-solid border-2 border-[#1e0e4b] rounded-md p-2" placeholder="Ceremony" required>
                    </div>
                    <div>
                        <label class="block mb-2 text-[1.25vw] font-medium text-gray-900">Ceremony Event's Location:</label>
                        <input name="eventsLocation1" type="text" class="w-full border-solid border-2 border-[#1e0e4b] rounded-md p-2" placeholder="Rosewood Gardens" required>
                    </div>
                    <div>
                        <label class="block mb-2 text-[1.25vw] font-medium text-gray-900">Ceremony Event's Starting time</label>
                        <input name="eventsStart1" type="text" class="w-full border-solid border-2 border-[#1e0e4b] rounded-md p-2" required placeholder="7:00PM">
                    </div>
                    <div>
                        <label class="block mb-2 text-[1.25vw] font-medium text-gray-900">Ceremony Event's Ending time</label>
                        <input name="eventsEnd1" type="text" class="w-full border-solid border-2 border-[#1e0e4b] rounded-md p-2" required placeholder="8:00PM">
                    </div>

                    <div>
                        <label class="block mb-2 text-[1.25vw] font-medium text-gray-900">Reception Event's Name:</label>
                        <input name="eventsName2" type="text" class="w-full border-solid border-2 border-[#1e0e4b] rounded-md p-2" placeholder="Ceremony" required>
                    </div>
                    <div>
                        <label class="block mb-2 text-[1.25vw] font-medium text-gray-900">Reception Event's Location:</label>
                        <input name="eventsLocation2" type="text" class="w-full border-solid border-2 border-[#1e0e4b] rounded-md p-2" placeholder="Rosewood Gardens" required>
                    </div>
                    <div>
                        <label class="block mb-2 text-[1.25vw] font-medium text-gray-900">Reception Event's Starting time</label>
                        <input name="eventsStart2" type="text" class="w-full border-solid border-2 border-[#1e0e4b] rounded-md p-2" required placeholder="8:00PM">
                    </div>
                    <div>
                        <label class="block mb-2 text-[1.25vw] font-medium text-gray-900">Reception Event's Ending time</label>
                        <input name="eventsEnd2" type="text" class="w-full border-solid border-2 border-[#1e0e4b] rounded-md p-2" required placeholder="9:00PM">
