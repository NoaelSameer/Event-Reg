          },
          {
            "name": "Reception",
            "location": "Rosewood Ballroom",
            "start_time": "6:00PM",
            "end_time": "11:00PM"
          } -->



    </div>
    <ul>
        <ul>
            <% data.forEach((event) => { %>
                <li>
                    <div class="event text-center my-[7vh] box-border border-2 border-gray-500 p-4 rounded-lg">
                        <div class="event-details">
                            <h3 class="event-name text-[2vw] font-semibold"><%= event.bride_name %> X <%= event.groom_name %></h3>
                            <h5 class="wedding-date text-gray-600"><%= event.wedding_date %></h5>
                            <p class="event-location"><strong>Venue:</strong> <%= event.venue.name %>, <%= event.venue.address %></p>
            
                            <div class="event-schedule mt-4">
                                <ul>
                                    <% event.events.forEach((eventer) => { %>
                                        <li>
                                            <p><strong><%= eventer.name %></strong> at <%= eventer.location %> (<%= eventer.start_time %> - <%= eventer.end_time %>)</p>
                                        </li>
                                    <% }); %>
                                </ul>
                            </div>
            
                            <div class="mt-2">
                                <form action="/editor/<%= event.wedding_id %>" method="POST" style="display:inline;">
                                    <button type="submit" class="bg-slate-600 h-[6vh] w-[13vw] text-[1.5vw] rounded-xl">Edit</button>
                                </form>
                                <form action="/delete/<%= event.wedding_id %>" method="POST" style="display:inline;">
                                    <button type="submit" class="bg-slate-600 h-[6vh] w-[13vw] text-[1.5vw] rounded-xl">Delete</button>
                                </form>
                                
    
                            </div>
                        </div>
                    </div>
                </li>
            <% }); %>            
        </ul>
        
        
    </ul>
</body>
</html>